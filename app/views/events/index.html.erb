<h1>Events</h1>

<h2>Upcoming events</h2>

<% Event.upcoming.each do |event| %>
  <td>
    <p>
      <%= link_to event.name, event_path(event) %>
    </p>
  </td>
<% end %>

<h2>Past events</h2>

<% Event.past.each do |event| %>
  <td>
    <p>
      <%= link_to event.name, event_path(event) %>
    </p>
  </td>
<% end %>